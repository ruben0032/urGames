{{> navHome}}

<header class="">
    <div class="bg-hero-md md:h-40 h-40 flex items-center justify-center" >
        <section class="block">
            
            <div class="flex justify-center pt-24">
                <label class=" w-72 md:w-60 relative block">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-2">
                    <svg class=" w-5 h-5 text-gray-400 " aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"> <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"> </path> </svg>
                    </span>
                    <input class="w-full bg-gray-50 border focus:outline-none rounded-md pl-9 focus:border-[#72CAE8] focus:ring-[#72CAE8] focus:ring-2" type="text" name="" id="seach" placeholder="Busqueda...">
                </label>
            </div>
        </section>
    </div>
</header>

<main class="container mx-auto">
    <section id="gamesCards" class="grid md:grid-cols-3 gap-14 py-10 md:px-10 mx-4">
        {{#each response}}
        <div data-info="{{this.id}}" class="card bg-secondary-100 flex flex-col items-center p-2 shadow-lg rounded-lg hover:cursor-pointer">
            <p class="text-xl font-semibold py-4 text-center">{{this.title}}</p>
            <img class="h-64 w-[60%] rounded-lg" src="{{this.urlImage}}" alt="">
            <p class="pt-2">{{this.studio}}</p>
        </div>
        {{/each}}
    </section>
    <section class="flex items-center justify-center h-12 bg-secondary-100 shadow-md rounded-md mb-6 mx-6">
        <div class="pages flex items-center pl-16">
            <img id="previewPage" class="w-8 hover:cursor-pointer hidden" src="./img/left-arrow.png" alt="">
            <p id="page" class="px-6">1</p>
            <img id="nextPage" class="w-8 hover:cursor-pointer" src="./img/right-arrow.png" alt="">
        </div>
    </section>
</main>


{{> footer}}

<script type="module" src="./js/home.js"></script>