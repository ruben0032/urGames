{{> navHome}}

<main class="container mx-auto min-h-[80vh] grid place-content-center">
    <section class="h-full p-10 max-w-2xl mx-2 bg-secondary-100 rounded-lg">
        <h3 class="text-center pb-4">Iniciar Sesión</h3>
        <form action="" id="formLogin" class="md:min-w-[50vh]">
            <div class="flex flex-col">
                <label for="email" class="mb-2 text-sm font-medium text-gray-800">Email</label>
                <input type="email" name="email" class="w-full bg-gray-50 border border-gray-300 rounded-md" required>
                <label for="password" class="mt-4 mb-2 text-sm font-medium text-gray-800">Password</label>
                <input type="password" name="password" class="w-full bg-gray-50 border border-gray-300 rounded-md" required>
            </div>
            <div>
                <p id="msgError" class="text-red-700 text-center text-sm"></p>
            </div>
            <div class="flex justify-center my-4">
                <button type="submit" class="bg-primary-300 text-white items-center py-1 px-4 border border-gray-300 rounded-lg shadow-lg shadow-primary-300/60 hover:bg-primary-100">Login</button>
            </div>
            <div>
                <p class="text-sm">¿Aún no estas registrado? <span> <a class="text-primary-300 italic" href="/user/signin">Registrate</a> </span> </p>
            </div>
        </form>
    </section>
</main>

{{> footer}}

<script type="module" src="../js/login.js"></script>
